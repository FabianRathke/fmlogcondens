#!/bin/bash

if [ x$OUT = x ]; then
	  OUT=src/Makevars
fi

TARGET=default
if [ x$1 != x ]; then
case $1 in
native | default )
  TARGET=$1
  shift 1
  ;;
esac
fi

echo Using target: $TARGET 
if [ $TARGET = native ]; then
  echo "Activate AVX support."
  C_FLAGS="-march=native $C_FLAGS"
elif [ $TARGET = default ]; then
  echo "Compile without AVX."
  C_FLAGS="$C_FLAGS"
fi


sed -e "s|@ADDITIONAL_CFLAGS@|$C_FLAGS|" src/Makevars.in > $OUT

